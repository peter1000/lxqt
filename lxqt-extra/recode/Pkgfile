# Description : Converts files between various character sets and usages.
# URL: http://recode.progiciels-bpi.ca/index.html
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: 

name=recode
release=1
version=3.6
source=()
_gitroot=https://github.com/pinard/Recode.git
_gitname=${name}

build() {
cd $SRC
	
	if [[ -d $_gitname ]]; then
		cd $_gitname && git pull origin
	else
		git clone $_gitroot $_gitname
	fi


	rm -rf $SRC/$_gitname-build
	git clone $SRC/$_gitname $SRC/$_gitname-build
	cd $SRC/$_gitname-build

  rm -f acinclude.m4

  ./configure --prefix=/usr --mandir=/usr/share/man \
    --infodir=/usr/share/info --without-included-gettext
  make
make DESTDIR=$PKG install
}

