# Description : The qterminal package contains a Qt widget based terminal emulator for Qt with support for multiple tabs.
# URL: http://lxqt.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: qtermwidget

name=qterminal
release=1
version=0.6.0
source=(https://github.com/qterminal/$name/releases/download/$version/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir -v build 
cd       build 
cmake -DCMAKE_BUILD_TYPE=Release  \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DUSE_SYSTEM_QXT=OFF        \
      -DUSE_QT5=true              \
      ..         
make
make DESTDIR=$PKG install
install -v -m755 -d $PKG/usr/share/doc/qterminal-0.6.0/{html,pdf} 
install -v -m644    docs/latex/refman.pdf \
                    $PKG/usr/share/doc/qterminal-0.6.0/pdf
cp -vr docs/html/* $PKG/usr/share/doc/qterminal-0.6.0/html
}

