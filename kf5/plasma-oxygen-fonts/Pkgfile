# Description : Desktop/gui font family for integrated use with the KDE Plasma 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: extra-cmake-modules qt5 fontforge  
name=plasma-oxygen-fonts
release=1
version=5.3.1
_name=oxygen-fonts
source=(http://download.kde.org/stable/plasma/5.3.1/${_name}-$version.tar.xz )

build() {
cd ${_name}*
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr      \
      -DLIB_INSTALL_DIR=lib                   \
      -DOXYGEN_FONT_INSTALL_DIR=/usr/share/fonts/truetype/oxygen \
      -Wno-dev .. 
make
make DESTDIR=$PKG install
}
