# Description : Library that provides a method of binding JavaScript objects to QObjects
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: extra-cmake-modules qt5 kf5-kdoctools kf5-ki18n kf5-kjs  
name=kf5-kjsembed
release=1

_name=kjsembed
source=(http://download.kde.org/stable/frameworks/${version%.*}/portingAids/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release         \
      -DLIB_INSTALL_DIR=lib              \
      -DBUILD_TESTING=OFF                \
      -DECM_MKSPECS_INSTALL_DIR=/usr/share/qt5/mkspecs/modules \
      -Wno-dev .. 

make
make DESTDIR=$PKG install
}
