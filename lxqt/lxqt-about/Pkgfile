# Description : The lxqt-about package provides the standalone LXQt “About” dialog.
# URL: http://lxqt.org/
# Packager: pierre at nutyx dot org
# Depends on: liblxqt

name=lxqt-about
release=1
version=0.9.0
source=(http://downloads.lxqt.org/$name/$version/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir -v build 
cd       build 
cmake -DCMAKE_BUILD_TYPE=Release       \
      -DCMAKE_INSTALL_PREFIX=/usr      \
      ..  
make
make DESTDIR=$PKG install
}

