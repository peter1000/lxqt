# Description : The lxqt-panel package contains a lightweight X11 desktop panel.
# URL: http://lxqt.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-kguiaddons lxqt-globalkeys liblxqt liblxqt-mount lxde-menu-data menu-cache libsysstat

name=lxqt-panel
release=1
version=0.9.0
source=(http://downloads.lxqt.org/lxqt/0.9.1/$name-$version.tar.xz)

build() {
cd $name-$version
sed -i 's:<KF5/KWindowSystem/:<:'       \
       plugin-mainmenu/lxqtmainmenu.cpp       \
       plugin-kbindicator/lxqtkbindicator.h   \
       plugin-showdesktop/showdesktop.cpp     \
       plugin-taskbar/lxqttaskbutton.cpp      \
       plugin-taskbar/lxqttaskbar.h           \
       plugin-desktopswitch/desktopswitch.cpp \
       panel/lxqtpanel.cpp                    \
       panel/config/configpaneldialog.cpp     

sed -e 's:<KF5/KGuiAddons/:<:'          \
    -i plugin-kbindicator/lxqtkbindicator.h   


mkdir -v build 
cd       build 

cmake -DCMAKE_BUILD_TYPE=Release       \
      -DCMAKE_INSTALL_PREFIX=/usr      \
      -DCMAKE_INSTALL_LIBDIR=lib       \
      ..  
make
make DESTDIR=$PKG install
}

