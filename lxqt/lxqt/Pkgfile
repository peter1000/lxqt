# Description :  lxqt.info
# URL: https://www.lxqt.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
name=lxqt
release=1
version=0.9.0

source=()

build() {

mkdir -p $PKG/etc/profile.d
cat > $PKG/etc/profile.d/lxqt.sh << "EOF" 
export KF5=/usr
export QTDIR=/usr
export XDG_DATA_DIRS=$KF5/share:$XDG_DATA_DIRS:/usr/share
export XDG_CONFIG_DIRS=$KF5/etc/xdg:$XDG_CONFIG_DIRS:/etc/kf5/xdg
export PATH=$KF5/bin:$QTDIR/bin:$PATH
export QT_PLUGIN_PATH=$KF5/lib/qt5/plugins:$KF5/lib64/qt5/plugins:$QT_PLUGIN_PATH
export QML2_IMPORT_PATH=$KF5/lib/qt5/qml:$KF5/lib64/qt5/qml
export QML_IMPORT_PATH=$QML2_IMPORT_PATH
export KDE_SESSION_VERSION=5
export KDE_FULL_SESSION=true
EOF

mkdir -p $PKG/usr

}



