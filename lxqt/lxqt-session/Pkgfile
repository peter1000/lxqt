# Description : The lxqt-session package contains the default session manager for LXQt.
# URL: http://lxqt.org/
# Packager: pierre at nutyx dot org
# Depends on:  liblxqt lxqt-common

name=lxqt-session
release=1
version=0.9.0
source=(http://downloads.lxqt.org/lxqt/0.9.1/$name-$version.tar.xz)

build() {

cd $name-$version

sed -e 's:<KF5/KWindowSystem/:<:' \
    -i lxqt-session/src/lxqtmodman.cpp

mkdir build
cd    build
cmake -DCMAKE_BUILD_TYPE=Release       \
      -DCMAKE_INSTALL_PREFIX=/usr      \
      ..    
make
make DESTDIR=$PKG install
}

